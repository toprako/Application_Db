<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_setting_adepter_relativelayout1"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/settingadepter_edittext_value1"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="left"
                android:layout_marginLeft="15dp"
                android:hint="Price Min"
                android:inputType="number" />

            <EditText
                android:id="@+id/settingadepter_edittext_value2"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:hint="Price Max"
                android:inputType="number" />

            <EditText
                android:id="@+id/settingadepter_edittext_value3"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:layout_marginLeft="40dp"
                android:hint="Percent %"
                android:inputType="number" />
        </LinearLayout>
        <TextView
            android:id="@+id/settingadepter_txt_id"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>