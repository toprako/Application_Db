<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">
                <TextView
                    android:id="@+id/shopadepter_supplier_id"
                    android:layout_marginRight="15dp"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:background="@android:color/holo_green_light"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left" />
                <ImageView
                    android:layout_marginTop="5dp"
                    android:id="@+id/shopadepter_img"
                    android:layout_width="150dp"
                    android:layout_height="90dp" />
                <TextView
                    android:id="@+id/shopadepter_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:background="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <EditText
                android:id="@+id/shopadepter_adrestext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:hint="Shipping Adress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginLeft="2dp"
                android:text="QTY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/shopadpter_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:textAlignment="center"></Spinner>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/shopadepter_payable"
                android:text="Payable: "
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/shopadepter_slip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload pay slip" />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/shopadepter_productid"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>